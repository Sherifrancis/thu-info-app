<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/schedule_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

        <Button
                android:id="@+id/schedule_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/minus"
                android:enabled="false"/>

        <TextView
                android:id="@+id/schedule_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                />

        <Button
                android:id="@+id/schedule_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/plus"
                android:enabled="false"/>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/schedule_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/schedule_header"
            app:layout_constraintBottom_toTopOf="@id/schedule_bottom_bar">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/schedule_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <GridLayout
                        android:id="@+id/table_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="15"
                        android:columnCount="8"
                        android:orientation="vertical">
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/schedule_bottom_bar"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/schedule_custom_abbr"
                android:text="@string/custom_abbr_string"
                android:drawableTop="@drawable/ic_custom_24dp"
                style="@style/home_icon_style"/>

        <TextView
                android:id="@+id/schedule_save_image"
                android:text="@string/save_image_string"
                android:drawableTop="@drawable/ic_save_image_24dp"
                style="@style/home_icon_style"/>

        <TextView
                android:id="@+id/schedule_custom_add"
                android:text="@string/custom_add_string"
                android:drawableTop="@drawable/ic_add_24dp"
                style="@style/home_icon_style"/>

        <TextView
                android:id="@+id/schedule_manage_hidden"
                android:text="@string/manage_hidden_string"
                android:drawableTop="@drawable/ic_hidden_24dp"
                style="@style/home_icon_style"/>

        <TextView
                android:id="@+id/schedule_secondary_switch"
                android:text="@string/secondary_courses_string"
                android:drawableTop="@drawable/ic_two_24dp"
                style="@style/home_icon_style"/>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>