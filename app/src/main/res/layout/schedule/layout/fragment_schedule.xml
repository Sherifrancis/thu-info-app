                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    />

            <TextView
                    android:text="@string/tue"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:gravity="center"
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    />

            <TextView
                    android:text="@string/wed"
