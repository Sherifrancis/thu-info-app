<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/email_list_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/email_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
            android:id="@+id/email_content_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/email_content_back"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/back_string"/>

            <TextView
                    android:id="@+id/email_content_reply"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/reply_string"/>

            <TextView
                    android:id="@+id/email_content_forward"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/forward_string"/>

            <TextView
                    android:id="@+id/email_content_mode"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

            <TextView
                    android:id="@+id/email_content_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/email_content_attachment"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:src="@drawable/ic_attachment_24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:contentDescription="@string/attachment_string"/>
        </LinearLayout>

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="2"
                    android:text="@string/sender_string"/>

            <TextView
                    android:id="@+id/email_content_sender"
                    android:layout_width="0dp"
                    android:layout_columnWeight="9"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="2"
                    android:text="@string/time_string"/>

            <TextView
                    android:id="@+id/email_content_time"
                    android:layout_width="0dp"
                    android:layout_columnWeight="9"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="2"
                    android:text="@string/receiver_string"/>

            <TextView
                    android:id="@+id/email_content_receiver"
                    android:layout_width="0dp"
                    android:layout_columnWeight="9"/>

        </GridLayout>

        <WebView
                android:id="@+id/email_content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>