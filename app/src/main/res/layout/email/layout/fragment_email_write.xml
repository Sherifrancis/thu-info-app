<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
            android:id="@+id/write_email_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/subject_string"
            android:inputType="textEmailSubject"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill"/>

    <EditText
            android:id="@+id/write_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/receiver_hint"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/write_email_subject"
            tools:ignore="Autofill"/>

    <EditText
            android:id="@+id/write_email_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/email_content_string"
            android:inputType="textMultiLine"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/write_email_address"
            app:layout_constraintBottom_toTopOf="@id/write_email_send"
            tools:ignore="Autofill,TextFields"/>

    <Button
            android:id="@+id/write_email_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_string"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>