<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/hole_refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/hole_refresh_str"
                android:padding="5dp"
                style="@style/home_icon_style"/>

        <ImageView
                android:id="@+id/hole_attention_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toEndOf="@id/hole_refresh_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/hole_attention_str"
                android:padding="5dp"
                style="@style/home_icon_style"/>

        <ImageView
                android:id="@+id/hole_hot_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_whatshot"
                app:layout_constraintStart_toEndOf="@id/hole_attention_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/hole_attention_str"
                android:padding="5dp"
                style="@style/home_icon_style"/>

        <EditText
                android:id="@+id/hole_search_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/hole_hot_btn"
                app:layout_constraintEnd_toStartOf="@id/hole_new_post_btn"
                android:hint="@string/hole_search_str"
                android:inputType="text"
                android:autofillHints="@string/hole_search_str"/>

        <ImageView
                android:id="@+id/hole_new_post_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/hole_publish_str"
                android:padding="5dp"
                style="@style/home_icon_style"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/hole_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hole_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>