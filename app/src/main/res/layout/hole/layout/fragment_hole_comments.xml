<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/hole_comments_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/hole_comment_edit_text">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hole_comments_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <EditText
            android:id="@+id/hole_comment_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minLines="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hole_comment_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="Autofill,LabelFor"/>

    <Button
            android:id="@+id/hole_comment_submit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:enabled="false"
            android:text="@string/hole_publish_str"
            app:layout_constraintTop_toTopOf="@id/hole_comment_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/hole_comment_edit_text"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>