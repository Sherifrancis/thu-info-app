<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/e_card_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            app:layout_constraintTop_toTopOf="parent">

        <GridLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2">

            <TextView
                    android:text="@string/income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/income_value"
                    android:text="@string/_0_00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="28sp"/>

        </GridLayout>

        <GridLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2">

            <TextView
                    android:text="@string/expenditure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/expenditure_value"
                    android:text="@string/_0_00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="28sp"/>

        </GridLayout>

        <GridLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2">

            <TextView
                    android:text="@string/remainder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            <TextView
                    android:id="@+id/remainder_value"
                    android:text="@string/_0_00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="28sp"/>

        </GridLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/e_card_date_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@id/e_card_meta">

        <TextView
                android:id="@+id/e_card_date_start"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                style="@style/home_icon_style"/>

        <TextView
                android:id="@+id/e_card_date_end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                style="@style/home_icon_style"/>

        <TextView
                android:id="@+id/e_card_do_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/e_card_do_query_str"
                android:textSize="18sp"
                android:textAlignment="center"
                style="@style/home_icon_style"/>
    </LinearLayout>

    <com.bin.david.form.core.SmartTable
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/e_card_date_config"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/table"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/table"/>
</androidx.constraintlayout.widget.ConstraintLayout>