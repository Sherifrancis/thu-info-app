<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/laf_add_subject_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_string"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/laf_add_subject_edit"
            app:layout_constraintBottom_toBottomOf="@id/laf_add_subject_edit"/>

    <EditText
            android:id="@+id/laf_add_subject_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/laf_add_subject_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/subject_hint"
            android:inputType="text"
            tools:ignore="Autofill"/>

    <TextView
            android:id="@+id/laf_add_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_string"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/laf_add_time_edit"
            app:layout_constraintBottom_toBottomOf="@id/laf_add_time_edit"/>

    <EditText
            android:id="@+id/laf_add_time_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/laf_add_time_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/laf_add_subject_edit"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor"/>

    <TextView
            android:id="@+id/laf_add_locale_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locale_string"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/laf_add_locale_edit"
            app:layout_constraintBottom_toBottomOf="@id/laf_add_locale_edit"/>

    <EditText
            android:id="@+id/laf_add_locale_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/laf_add_locale_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/laf_add_time_edit"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor"/>

    <TextView
            android:id="@+id/laf_add_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_string"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/laf_add_detail_edit"
            app:layout_constraintBottom_toBottomOf="@id/laf_add_detail_edit"/>

    <EditText
            android:id="@+id/laf_add_detail_edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/laf_add_detail_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/laf_add_locale_edit"
            app:layout_constraintBottom_toTopOf="@id/laf_add_contact_edit"
            android:inputType="textMultiLine"
            tools:ignore="Autofill,LabelFor"/>

    <TextView
            android:id="@+id/laf_add_contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_string"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/laf_add_contact_edit"
            app:layout_constraintBottom_toBottomOf="@id/laf_add_contact_edit"/>

    <EditText
            android:id="@+id/laf_add_contact_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/laf_add_contact_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/laf_publish_btn"
            android:inputType="text"
            android:hint="@string/laf_contact_hint"
            tools:ignore="Autofill"/>

    <Button
            android:id="@+id/laf_publish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publish_string"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>