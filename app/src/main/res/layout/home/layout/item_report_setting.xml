<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <View
            android:id="@+id/middle_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/report_select_undergraduate"
            app:layout_constraintBottom_toBottomOf="@id/report_select_custom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/report_select_undergraduate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_undergraduate_str"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/middle_line"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_select"/>

    <TextView
            android:id="@+id/report_select_graduate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_graduate_choice_str"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_unselect"/>

    <TextView
            android:id="@+id/report_select_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_new_str"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/report_select_undergraduate"
            app:layout_constraintEnd_toEndOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.3"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_select"/>

    <TextView
            android:id="@+id/report_select_oid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_old_str"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/report_select_undergraduate"
            app:layout_constraintStart_toStartOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_unselect"/>

    <TextView
            android:id="@+id/report_select_bxr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_bxr_str"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/report_select_new"
            app:layout_constraintEnd_toEndOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.3"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_select"/>

    <TextView
            android:id="@+id/report_select_bx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_bx_select_str"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/report_select_new"
            app:layout_constraintStart_toStartOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_unselect"/>

    <TextView
            android:id="@+id/report_select_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_custom_select_str"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/report_select_bxr"
            app:layout_constraintEnd_toEndOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.3"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_unselect"/>

    <TextView
            android:id="@+id/report_select_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_manage_str"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/report_select_bxr"
            app:layout_constraintStart_toStartOf="@id/middle_line"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_margin="5dp"
            android:background="@drawable/report_setting_unselect"/>

</androidx.constraintlayout.widget.ConstraintLayout>