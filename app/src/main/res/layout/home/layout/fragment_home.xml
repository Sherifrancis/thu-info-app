<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/score"
                android:textSize="15sp"/>

        <GridLayout
                android:id="@+id/score_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="1">

            <Button
                    android:id="@+id/report_btn"
                    android:text="@string/report"/>

            <Button
                    android:id="@+id/physical_exam_btn"
                    android:text="@string/physical_exam_result"/>

            <Button
                    android:id="@+id/jogging_btn"
                    android:text="@string/sunny_jogging"/>

        </GridLayout>

        <View
                android:id="@+id/score_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"/>

        <TextView
                android:id="@+id/res_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/res_string"
                android:textSize="15sp"/>

        <GridLayout
                android:id="@+id/res_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="1">

            <Button
                    android:id="@+id/classroom_btn"
                    android:text="@string/classroom_res"/>

            <Button
                    android:id="@+id/wentu_btn"
                    android:text="@string/wentu_string"/>

        </GridLayout>

        <View
                android:id="@+id/res_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"/>

        <TextView
                android:id="@+id/e_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/e_card"
                android:textSize="15sp"/>

        <GridLayout
                android:id="@+id/e_card_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="1">

            <Button
                    android:id="@+id/e_card_query_btn"
                    android:text="@string/card_record"/>

            <Button
                    android:id="@+id/lose_card_btn"
                    android:text="@string/lose_card_string"/>

        </GridLayout>

        <View
                android:id="@+id/e_card_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"/>

        <TextView
                android:id="@+id/community_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/community_string"
                android:textSize="15sp"/>

        <GridLayout
                android:id="@+id/community_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="1">

            <Button
                    android:id="@+id/dorm_laf_btn"
                    android:text="@string/dorm_laf_string"
                    android:enabled="false"/>

            <Button
                    android:id="@+id/dorm_repair_btn"
                    android:text="@string/dorm_repair_string"
                    android:enabled="false"/>

            <Button
                    android:id="@+id/dorm_mail_btn"
                    android:text="@string/dorm_mail_string"
                    android:enabled="false"/>

            <Button
                    android:id="@+id/dorm_score_btn"
                    android:text="@string/dorm_score_string"/>

        </GridLayout>

        <View
                android:id="@+id/community_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"/>

    </LinearLayout>

</ScrollView>