<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

    <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/score"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <GridLayout
            android:id="@+id/score_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/score_text"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="1">

        <Button
                android:id="@+id/gpa_btn"
                android:text="@string/quick_gpa"
                android:enabled="false"/>

        <Button
                android:id="@+id/report_btn"
                android:text="@string/report"/>

        <Button
                android:id="@+id/physical_exam_btn"
                android:text="@string/physical_exam_result"/>

        <Button
                android:id="@+id/jogging_btn"
                android:text="@string/sunny_jogging"/>

    </GridLayout>

    <View
            android:id="@+id/score_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/score_grid"/>

    <TextView
            android:id="@+id/ecard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/ecard"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/score_line"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <GridLayout
            android:id="@+id/ecard_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ecard_text"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="1">

        <Button
                android:id="@+id/ecard_query_btn"
                android:text="@string/card_record"/>

        <Button
                android:id="@+id/lose_card_btn"
                android:text="@string/lose_card_string"/>

    </GridLayout>

    <View
            android:id="@+id/ecard_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/ecard_grid"/>


</androidx.constraintlayout.widget.ConstraintLayout>